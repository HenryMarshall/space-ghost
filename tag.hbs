{{!< default}}
{{!-- The tag above means: insert everything below into debault.hbs --}}

<main class="content inner tag-page" role="main">

  <div class="wrapper">
    <section class="project-overview">
      {{!-- Using `slug="{{tag.name}}"` doesn't seem to work in Ghost 0.8.0 --}}
      {{#get "posts" filter="slug:{{tag.name}}"}}
        {{!-- Because slugs are unique there will only ever be one post --}}
        {{#foreach posts}}
          <h1>{{title}}</h1>

          {{#if paged}}
            {{#if meta_description}}
              {{meta_description}}
            {{else}}
              {{content words="50"}}
            {{/if}}
          {{else}}
            {{content}}
          {{/if}}

        {{! Page for a non-project tag (e.g., NewYork or Node) }}
        {{else}}
          {{#tag}}
            <h1>{{name}}</h1>
            {{#if description}}
              <p>{{description}}</p>
            {{/if}}
          {{/tag}}
        {{/foreach}}
      {{/get}}
    </section>

    <hr>

    <h2>Latest News</h2>
    {{> "loop"}}
  </div>
</main>

