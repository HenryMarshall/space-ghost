{{!< default }}

<div class="hero">
  <img src="{{@blog.cover}}" alt="Cover Image">
  <h2>{{@blog.description}}</h2>
</div>

<main>

  <section class="home-section">
    {{> featured-projects}}
  </section>

  {{#get "posts" filter="tag:home+page:true"}}
    {{#foreach posts}}
      <section class="home-section"{{#if image}} style="background: image-url({{image}})"{{/if}}>
        <div>
          <h2>{{title}}</h2>
          <p>{{content}}</p>
        </div>
      </section>
    {{/foreach}}
  {{/get}}

</main>

<h2>The Latest News</h2>
<ul>
  {{#posts}}
    {{> teaser}}
  {{/posts}}
</ul>

{{pagination}}
