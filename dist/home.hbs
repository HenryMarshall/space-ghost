{{!< default }}

<div class="hero">
  <img src="{{@blog.cover}}" alt="Cover Image">
  <h2>{{@blog.description}}</h2>
</div>

{{> featured-projects}}

{{#get "posts" filter="tag:home+page:true"}}
  {{#foreach posts}}
    <h2>{{title}}</h2>
    {{content}}
  {{/foreach}}
{{/get}}

<h2>The Latest News</h2>
<ul>
  {{#posts}}
    <li>
      <h3>{{title}}</h3>
      <p>{{excerpt words="40"}}</p>
    </li>
  {{/posts}}
</ul>

{{pagination}}
