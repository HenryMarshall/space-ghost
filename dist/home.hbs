{{!< default }}
<h1>{{@blog.title}}</h1>

{{> featured-projects}}

{{#get "posts" filter="tag:home+page:true"}}
  {{#foreach posts}}
    <h2>{{title}}</h2>
    {{content}}
  {{/foreach}}
{{/get}}

<h2>The Latest News</h2>
<ul>
  {{#posts}}
    <li>
      <h3>{{title}}</h3>
      <p>{{excerpt words="40"}}</p>
    </li>
  {{/posts}}
</ul>
{{pagination}}
