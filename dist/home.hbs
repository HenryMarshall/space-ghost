<h1>Static Home</h1>

{{#get "posts" slug="mission-statement"}}
  <h2>{{title}}</h2>
  <img src={{image}}/>
  {{{content}}}
{{/get}}

{{#get "posts" limit="4" filter="featured:true+page:true"}}
  <h2>Featured Projects</h2>
  <ul class="horizontal-image-wrapper">
    {{#foreach posts}}
      <a href={{url}}>
        <li>
          {{! If the image isn't defined it will be a broken link }}
          {{#if image}}
            <img src={{image}}/>
          {{else}}
            <div class="square-the-same-sized-as-the-image"></div>
          {{/if}}
          <h3>{{title}}</h3>
        </li>
      </a>
    {{/foreach}}
  </ul>
{{/get}}

{{#get "posts" slug="our-approach"}}
  <h2>{{title}}</h2>
  <img src={{image}}/>
  {{{content}}}
{{/get}}

{{#get "posts" limit="4" filter="page:false"}}
  <h2>The Latest News</h2>
  <ul class="horizontal-image-wrapper">
    {{#foreach posts}}
      <li>
        <h3>{{title}}</h3>
        <p>{{excerpt words="40"}}</p>
      </li>
    {{/foreach}}
  </ul>
{{/get}}
