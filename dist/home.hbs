{{!< default }}

<div class="hero"{{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{/if}}>
  <h2>{{@blog.description}}</h2>
</div>

<main>

  <section class="home-section">
    <div class="line-behind-text">
      <h6>Featured Projects</h6>
    </div>

    {{#get "posts" filter="featured:true+tag:project" limit="3"}}
      {{> project-cards}}
    {{/get}}
  </section>

  {{#get "posts" filter="tag:home+page:true"}}
    {{#foreach posts}}
      <section class="home-section"{{#if image}} style="background: image-url({{image}})"{{/if}}>
        <div class="content">
          <h2>{{title}}</h2>
          <p>{{content}}</p>
        </div>
      </section>
    {{/foreach}}
  {{/get}}

  <section class="home-section">
    <div class="content">
      <h2>The Latest News</h2>

      {{#posts}}
        <li>
          <a href="{{url}}">{{title}}</a>
        </li>
      {{/posts}}

      <a href="/page/2" class="btn">See More</a>
    </div>
  </section>

</main>
