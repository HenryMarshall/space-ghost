{{!< default }}

<div class="hero">
  <img src="{{@blog.cover}}" alt="Cover Image">
  <h2>{{@blog.description}}</h2>
</div>

{{> featured-projects}}

{{#get "posts" filter="tag:home+page:true"}}
  {{#foreach posts}}
    <section class="home-section">
      {{#if image}}
        <img src="{{image}}" alt="{{title}} image">
      {{/if}}
      <div class="content">
        <h2>{{title}}</h2>
        {{content}}
      </div>
    </section>
  {{/foreach}}
{{/get}}

<h2>The Latest News</h2>
<ul>
  {{#posts}}
    {{> teaser}}
  {{/posts}}
</ul>

{{pagination}}
