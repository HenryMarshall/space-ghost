{{#post}}
  <h1>{{title}}</h1>
  {{content}}
{{/post}}

{{! TODO: Using tags here may be short-sighted. }}
{{! To do so precludes the use of tech-stack tags (e.g., node) }}
{{#get "tags"}}
  {{#foreach tags}}
    <a href={{-url}}></a>
      {{#if meta_title}}
        <h3>{{meta_title}}</h3>
      {{else}}
        <h3>{{name}}</h3>
      {{/if}}

      <p>
        {{description}}
      </p>

      {{#if image}}
        <img src={{image}}/>
      {{else}}
        <div class="square-the-same-sized-as-the-image"></div>
      {{/if}}

    </a>
  {{/foreach}}
{{/get}}
