  <div class="footer-wrapper">

    <span class="copyright">
      <a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}
    </span>

    <div class="footer-secondary-links">
      <ul class="footer-social">

