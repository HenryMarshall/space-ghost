<div class="cards-wrapper">
  <div class="cards">
    {{#foreach posts}}
      <div class="card">
        {{!-- NOTE: For links to work this *requires* the "project" post use a
        slug with the same value as the project's tag. As of Ghost 0.8.0, you
        set the slug as "Post URL" in the Admin UI --}}
        <a href="tag/{{slug}}">
          <div class="card-image">
            <img alt="project picture" src=
            "{{#if image}}
              {{image}}
            {{else}}
              https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/mountains.png
            {{/if}}">
          </div>
          <div class="card-header">
            {{title}}
          </div>
          <div class="card-copy">
            {{excerpt}}
          </div>
        </a>
      </div>
    {{/foreach}}
  </div>
</div>
