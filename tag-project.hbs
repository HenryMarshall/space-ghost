{{!< default}}

<div id="projects">
  {{#tag}}
    <div class="refill-hero" 
       {{#if image}}
         style="background-image: url({{image}})"
       {{else}}
         {{#if @blog.cover}}
           style="background-image: url({{@blog.cover}})"
         {{/if}}
       {{/if}}>
      <div class="hero-content">
        <h1>{{#if meta_title}}{{meta_title}}{{else}}Projects{{/if}}</h1>
        <p>{{description}}</p>
      </div>
    </div>
  {{/tag}}

  {{> project-cards}}

  {{pagination}}
</div>

